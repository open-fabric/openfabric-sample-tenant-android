<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutPurchaseComplete"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="639dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="256dp"
                android:layout_height="108dp"
                android:layout_margin="16dp"
                android:scaleType="fitCenter"
                android:src="@drawable/flash_pay" />

            <TextView
                android:layout_width="325dp"
                android:layout_height="wrap_content"
                android:text="Purchase has been successfully made with Flash Pay, click to return to App"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:layout_marginBottom="50dp"
                android:textSize="18sp" />

            <Button
                android:id="@+id/purchase_complete_btn"
                android:layout_width="wrap_content"
                android:layout_height="41dp"
                android:layout_margin="16dp"
                android:background="@color/flash_pay"
                android:paddingHorizontal="64dp"
                android:text="Return to App"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textStyle="bold" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>