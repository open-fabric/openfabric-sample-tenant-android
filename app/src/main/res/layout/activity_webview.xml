<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/toolbar"
        layout="@layout/layout_toolbar" />

    <LinearLayout
        android:id="@+id/imageContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:src="@drawable/homecredit_horizontal" />

        <View
            android:layout_width="2dp"
            android:layout_height="64dp"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="24dp"
            android:background="@android:color/darker_gray" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:src="@drawable/lazada_horizontal" />

    </LinearLayout>

    <WebView
        android:id="@+id/webView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/imageContainer" />

    <FrameLayout
        android:id="@+id/overlayLayout"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:background="@android:color/transparent"
        android:clickable="true">

        <Button
            android:id="@+id/overlayButton"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_centerInParent="true"
            android:layout_marginHorizontal="32dp"
            android:background="@drawable/overlay_button_background"
            android:drawableEnd="@drawable/hc_36"
            android:paddingEnd="32dp"
            android:text="Tap here to pay with"
            android:textColor="#000000" />
    </FrameLayout>
</RelativeLayout>
